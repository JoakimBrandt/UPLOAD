{{>header}}
<section class="section">

    <form method="POST" action="/deleteBlogPostByID">
        <input type="hidden" name="_csrf" value="{{@root.csrfToken}}">
        <div class="columns notification">
            <div class="column is-one-fifth">
                {{>menu_section}}
            </div>

            <div class="column is-half">
                <div class="field">
                    <label class="label">Delete blog post</label>
                    <div class="control">
                        <input class="input" type="text" name="postID" placeholder="Enter ID of the post you would like to delete">
                    </div>

                </div>
                <input class="button" type="submit" value="Delete post!">
            </div>
            </div>

        </div>



    </form>
</section>